<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayMuzio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/haiti</item>
        <item name="colorPrimaryVariant">@color/haiti</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/geraldine</item>
        <item name="colorSecondaryVariant">@color/haiti</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PlayMuzio.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize12dp" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>
</resources>