<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/primary_background_screen">

    <ImageView
        android:id="@+id/iv_no_internet_connection"
        android:layout_width="@dimen/iv_no_internet_connection_width"
        android:layout_height="@dimen/iv_no_internet_connection_height"
        android:src="@drawable/ic_baseline_wifi_off"
        android:contentDescription="@string/no_internet_connection"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_no_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_connection"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="@dimen/tv_no_internet_connection_size"
        android:visibility="gone"/>
</LinearLayout>